.stat{
  margin: 60rpx,40rpx;
  padding: 20rpx;
  background-color: #ffffff;
}
.line{
  height: 2rpx;
  width: 100%;
  background-color: #666666;
  opacity: 0.2;
}
.count{
  font-size: 50rpx;
}
.title{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #b5b5b5;
}
.total{
  font-size: 24rpx;
  color: #B5B5B5;
}
.total text{
  margin-right: 20rpx;
}
.items{
  padding: 20rpx;
}
.item{
  border: 0.6rpx solid #b5b5b5;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin: 20rpx;
  margin-left: 10rpx;
}
.before{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.before image{
  margin-right: 20rpx;
}
.desc{
  font-size: 20rpx;
  color: #b5b5b5;
}
.after{
  margin-right: 20rpx;
  align-self: center;
}
.add image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.add{
  margin: 20rpx;
  padding: 24rpx;
  text-align: center;
  align-items: center;
  color: #ffd700;
  background-color: #fff;
  display: flex;
  justify-content: center;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.line {
  height: 2rpx;
  width: 100%;
  background-color: #666666;
  opacity: 0.2;
}
.balance {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx;
}
.hr {
  width: 100%;
  height: 20rpx;
  background-color: #f9f8f6;
}
.title {
  padding: 20rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.item {
  margin: 15rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 20rpx;
}
.date {
  width: 50%;
}
.bg {
  background-color: #fff;
  height: 80rpx;
  width: 100%;
  border: 2rpx solid #f2f2f2;
  bottom: 0rpx;
  position: fixed;
}
.writeOne {
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #ffd700;
}
.trade_in {
  width: 30%;
  color: #00bfff;
}

.trade_out {
  width: 30%;
  color: #ffd700;
}